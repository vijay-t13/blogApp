<h2>
Hello, Welcome to my blog!
</h2>
<h4>

</h4>

<div>
    <% @blog_posts.each do |value| %>
    <div>
       <%= link_to value.title, blog_post_path(value) %> 
        <% if value.draft? %> <span>draft </span><% end %>
        <% if value.scheduled? %> <span>scheduled</span> <% end %>
        <% if value.published? %> <span>published</span> <% end %>

    </div>
    <% end %>

</div>