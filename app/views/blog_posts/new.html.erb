<h2>New post</h2>



<%= form_with model: @blog_post do |form| %>

    <% if @blog_post.errors.full_messages.any? %>
        <% @blog_post.errors.full_messages do |msg| %>
            <h3><%= msg %></h3>
        <% end %>
    <% end %>  

 
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <div>
        <%= form.label :published_at %>
        <%= form.datetime_select :published_at, include_blank: true %>
    </div>
    <div>
        <%= form.hidden_field :user_id, value: current_user.id %>
    </div>  
    <%= form.button %>
<% end %>